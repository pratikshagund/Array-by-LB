 long long findMinDiff(vector<long long> a, long long n, long long m){
    sort(a.begin(),a.end());
    long long diff=0, minm=a[m-1]-a[0];
    for(int i=1;i<=n-m;i++)
    {
       diff = a[i+m-1]-a[i];
      
       if(diff<minm)
       {
           minm=diff;
       }
    }   
    return minm;
    }
    
    
    *************************
    time = o(N)
    space = o(N)
    *************************
